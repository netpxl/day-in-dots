/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@core/*": ["app/core/*"],
      "@dot-calendar/feature/*": ["app/features/dot-calendar/feature/*"],
      "@dot-calendar/data-access/*": ["app/features/dot-calendar/data-access/*"],
      "@activity-management/feature/*": ["app/features/activity-management/feature/*"],
      "@activity-management/data-access/*": ["app/features/activity-management/data-access/*"],
      "@activity-tracking/feature/*": ["app/features/activity-tracking/feature/*"],
      "@analytics/feature/*": ["app/features/analytics/feature/*"],
    },
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
